rdir0 <- function(p)
{
	n = length(p)
	out = rgamma(n, p, 1)
	sm = sum(out)
	out = out / sm
	return(out)
}

rdirichlet <- function(n, p)
{
	k = length(p)
	p = rep(2/k,k)
	out = c()
	for (i in 1:n)
	{
		out = rbind(out, rdir0(k,p))
	}	
	return(out)
}


sampleQ <- function(n,k)
{
	return(rdirichlet(n, rep(2/k,k)))
}

